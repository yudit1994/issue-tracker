
<link rel="stylesheet" href="/css/style.css">

<!-- heading and link for going to home page -->
<div id="project">
<h3 class="mt-3 mb-5 pb-5">CREATE PROJECT PAGE</h3>
<a href="/" id="link">Go To Home</a>
</div>

<!-- create project form -->
<div id="form">
<form class="contact-form col-md-11 col-lg-9 mx-auto" method="post" action="/create-project">
    <div class="form-row">
        <div class="col form-group">
            <input type="text" class="form-control" name="name" placeholder="Name of project">
        </div>
        <div class="col form-group">
            <input type="text" class="form-control"  name="author" placeholder="Author">
        </div>
    </div>
    <div class="form-group">
        <textarea  id="" cols="30" rows="5" class="form-control" name="description" placeholder="Description"></textarea>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary btn-block" value="Submit">
    </div>
</form><!-- End of Contact form -->   
</div>